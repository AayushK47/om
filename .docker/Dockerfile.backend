# Build stage
FROM node:20-alpine AS builder
WORKDIR /app
COPY ./backend/package*.json ./
RUN npm ci  # Install all deps including devDeps
COPY ./backend/ .
RUN npm run build

# Production stage
FROM node:20-alpine AS production
WORKDIR /app
COPY ./backend/package*.json ./
RUN npm ci --only=production
COPY --from=builder /app/dist ./dist
EXPOSE 3001
CMD ["npm", "start"]